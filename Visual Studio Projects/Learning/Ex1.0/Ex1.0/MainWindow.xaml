<Window x:Class="Ex1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="262*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="value1" HorizontalAlignment="Left" Height="23" Margin="90,14,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="value2" HorizontalAlignment="Left" Height="23" Margin="206,14,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="95"/>
        <Button x:Name="Calculate" Content="Calculate" HorizontalAlignment="Left" Margin="318,14,0,0" VerticalAlignment="Top" Width="75" Click="Calculate_click"/>
        <TextBlock x:Name="tbResult" HorizontalAlignment="Left" Margin="426,16,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="70"/>
        <RadioButton x:Name="rbPlus" Content="Plus" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton Content="Minus" HorizontalAlignment="Left" Margin="0,30,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
